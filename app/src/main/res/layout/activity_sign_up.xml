<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sign_in_logo"
            style="@style/logoAsanamate" />

        <TextView
            android:id="@+id/signup_text"
            style="@style/text_20_bold"
            android:text="Sign Up" />

        <EditText
            android:id="@+id/signup_name_box"
            style="@style/editText_login"
            android:hint="Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/signup_email_box"
            style="@style/editText_login"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_password_box"
                style="@style/editText_login"
                android:hint="Password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/signup_hide"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/hide"/>

            <ImageView
                android:id="@+id/signup_view"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/view"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_confirmpassword_box"
                style="@style/editText_login"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/signup_confirm_hide"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/hide"/>

            <ImageView
                android:id="@+id/signup_confirm_view"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/view"/>

        </FrameLayout>


        <RadioGroup
            android:id="@+id/signup_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButton"
                android:layout_marginRight="@dimen/_50sdp"
                android:text="Male" />

            <RadioButton
                style="@style/RadioButton"
                android:text="Female" />

        </RadioGroup>

        <Spinner
            android:id="@+id/signup_country"
            style="@style/spinner" />

        <CheckBox
            android:id="@+id/terms_and_conditions"
            style="@style/checkBox"
            android:text="I accept all terms &amp; conditions" />

        <Button
            android:id="@+id/signup_button"
            style="@style/button_login"
            android:text="sign up" />

    </LinearLayout>

</ScrollView>