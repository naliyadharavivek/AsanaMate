<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/sign_in_logo"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/asanamate_logo1" />

    <TextView
        android:id="@+id/sign_in_text"
        style="@style/text_20_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_1sdp"
        android:gravity="center"
        android:text="Sign In" />

    <EditText
        android:id="@+id/email_box"
        style="@style/text_login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/custom_border"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="@dimen/_48sdp"
        android:padding="@dimen/_10sdp" />

    <EditText
        android:id="@+id/password_box"
        style="@style/text_login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/custom_border"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="@dimen/_48sdp"
        android:padding="@dimen/_10sdp" />

    <Button
        android:id="@+id/login_button"
        style="@style/text_login_page"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/custom_border"
        android:minHeight="@dimen/_48sdp"
        android:text="LOGIN"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/forgot_password_text"
        style="@style/text_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:text="Forgot Password?"
        android:textColor="#858A8A"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_account_text"
            style="@style/text_login_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:clickable="true"
            android:focusable="true"
            android:text="Sign Up"
            android:textColor="#2196F3"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp">

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="#CCC" />

        <TextView
            style="@style/text_login_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:text="OR"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="#CCC" />

    </LinearLayout>

    <TextView
        android:id="@+id/signup_with_social_network"
        style="@style/text_login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:text="Signup with Social Networks"
        android:textSize="@dimen/_11sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:spacing="@dimen/_16sdp">

            <ImageButton
                android:id="@+id/btnGoogle"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Google"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/google_logo" />

            <TextView
                android:id="@+id/google_logo_text"
                style="@style/text_login_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Google" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:spacing="@dimen/_16sdp">

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Facebook"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/fb_logo" />

            <TextView
                android:id="@+id/facebook_logo_text"
                style="@style/text_login_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Facebook" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>