<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AsanaMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:background">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="text_16_bold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_login_page" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="textColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>