<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AsanaMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="android:statusBarColor">@color/lavender</item>
        <!-- Customize your dark theme here. -->
    </style>

    <style name="logoAsanamate">
        <item name="android:src">@drawable/asanamate_logo1</item>
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_140sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/white</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_20_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginVertical">@dimen/_1sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="editText_login" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="actionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="editText_login2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="button_login">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
        <item name="marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_login2">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
        <item name="marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textView_login" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="linearLayout_continuewith">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageButton_continuewith">
        <item name="android:layout_width">@dimen/_48sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
    </style>

    <style name="checkBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="hide_eye">
        <item name="android:src">@drawable/hide_white</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <style name="show_eye">
        <item name="android:src">@drawable/view_white</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <style name="hide_eye2">
        <item name="android:src">@drawable/hide_white</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <style name="show_eye2">
        <item name="android:src">@drawable/view_white</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

</resources>